<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    >


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@drawable/logbook_row_bg">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="5dp"
            android:background="@drawable/logbook_bg">
            <ImageView
                android:id="@+id/LogbookPref"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="true"
                app:srcCompat="@drawable/logbook_eye" />
        </RelativeLayout>
        <TextView
            android:id="@+id/Logbook_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginStart="60dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:text="Item X"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="#2f3640"/>

        <TextView
            android:id="@+id/logbook_row_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:layout_marginStart="190dp"
            android:layout_centerVertical="true"
            android:padding="16dp"
            android:hint="Date"
            android:fontFamily="@font/helvetica_bold"
            android:textColor="#2f3640"/>

    </RelativeLayout>

</LinearLayout>