<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A2435"
    tools:context=".BarangayLogin">

  <TextView
      android:id="@+id/textView2"
      android:layout_width="305dp"
      android:layout_height="454dp"
      android:background="@drawable/box"
      android:text=""
      android:textSize="8sp"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintVertical_bias="0.498" />

  <ImageView
      android:id="@+id/imageView3"
      android:layout_width="127dp"
      android:layout_height="104dp"
      android:src="@drawable/logo5"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.145" />

  <TextView
      android:id="@+id/textView3"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Barangay Login"
      android:textColor="#000000"
      android:textSize="24sp"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintHorizontal_bias="0.496"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.431" />

  <View
      android:id="@+id/line"
      android:layout_width="185dp"
      android:layout_height="1dp"
      android:background="#000000"
      app:layout_constraintBottom_toTopOf="@+id/Barangay_UserName"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toBottomOf="@+id/textView3"
      app:layout_constraintVertical_bias="0.419" />

  <TextView
      android:id="@+id/Barangay_UserName"
      android:layout_width="166dp"
      android:layout_height="29dp"
      android:background="@drawable/editround"
      android:paddingLeft="10dp"
      android:drawableLeft="@drawable/user"
      android:text="Username"
      android:textSize="18dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.576" />

  <EditText
      android:id="@+id/Barangay_Password"
      android:layout_width="166dp"
      android:layout_height="29dp"
      android:background="@drawable/editround"
      android:paddingLeft="10dp"
      android:drawableLeft="@drawable/pass3"
      android:hint="Password"
      android:textSize="18dp"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.677" />

  <Button
      android:id="@+id/Barangay_btn_signin"
      android:layout_width="166dp"
      android:layout_height="29dp"
      android:background="@drawable/buttonround"
      android:text="Sign In"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="7sp"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.771" />

  <Button
      android:id="@+id/User_cntlgn"
      android:layout_width="166dp"
      android:layout_height="29dp"
      android:background="@drawable/buttonround"
      android:text="Can't Login?"
      android:textAllCaps="false"
      android:textColor="#FFFFFF"
      android:textSize="7sp"
      app:layout_constraintBottom_toBottomOf="@+id/textView2"
      app:layout_constraintEnd_toEndOf="@+id/textView2"
      app:layout_constraintHorizontal_bias="0.503"
      app:layout_constraintStart_toStartOf="@+id/textView2"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      app:layout_constraintVertical_bias="0.861" />

</androidx.constraintlayout.widget.ConstraintLayout>