    <EditText
        android:id="@+id/RegPersonnelCPass"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:background="@drawable/editround"
        android:clickable="true"
        android:ems="5"
        android:fontFamily="@font/helvetica_bold"
        android:gravity="bottom"
        android:hint="Subject"
        android:inputType="textLongMessage"
        android:padding="10dp"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.194"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38" />

    <FrameLayout
        android:layout_width="155dp"
        android:layout_height="155dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.092">

        <ImageView
            android:id="@+id/CAnnounceIconType"
            android:layout_width="150dp"
            android:layout_height="150dp"
            app:srcCompat="@drawable/defaulticon" />
    </FrameLayout>

    <Spinner
        android:id="@+id/spinnerEditIcon"
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:background="@drawable/editround"
        android:foregroundGravity="center"
        android:gravity="center"
        android:hint="Select Icon"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.172"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.322"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.687"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.38"
        app:srcCompat="@drawable/notif_editicon" />

    <EditText
        android:id="@+id/CAnnounceDetail"
        android:layout_width="310dp"
        android:layout_height="240dp"
        android:background="@drawable/box"
        android:clickable="true"
        android:ems="10"
        android:fontFamily="@font/helvetica_bold"
        android:gravity="center|center_horizontal"
        android:hint="Announcement Detail"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.755"
        tools:inputType="textMultiLine"
        tools:maxLength="150" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/CAnnouncementSend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.856"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.936"
        app:srcCompat="@android:drawable/ic_menu_send" />

    <TextView
        android:id="@+id/ACurrentDate"
        android:layout_width="331dp"
        android:layout_height="49dp"
        android:fontFamily="@font/helvetica_bold"
        android:gravity="center"
        android:text="TextView"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.458" />


</androidx.constraintlayout.widget.ConstraintLayout>